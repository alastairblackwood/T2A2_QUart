<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "form-label mr-1" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description, class: "form-label mr-1" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :price, class: "form-label mr-1" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :category_id, class: "form-label mr-1" %>
    <%= form.select :category_id, @categories.map {|c| [c.name, c.id]} %>
  </div>

  <h5>Features</h5>
  <div class="form-check form-check-line">
    <%= form.collection_check_boxes :feature_ids, @features, :id, :name do |c| %>
      <%= c.label(class: "form-check-label") %>
      <%= c.check_box(class: "form-check mr-2") %>
    <% end %>
  </div>

  <h5 class='mb-3'>Picture</h5>
  <div class='form-group mb-3'>
    <%= form.label :picture, class: 'form-label' %>
    <%= form.file_field :picture, accepts: "image/png,image/jpg,image/jpeg", class: 'form-control-file' %>
    <br>
    <small class='form-text text-muted'>PNG, JPG and JPEG only</small>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
